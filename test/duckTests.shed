package duck;

import hat.TestCase;
import hat.assertTrue;
import hat.assertFalse;
import hat.assertEquals;
import hat.results.all;
import duck;

public val duckTests = listOf(
    TestCase("equalTo matches using equals method", fun() => {
        val matcher = duck.equalTo[String]("blah");
        return all(listOf(
            assertTrue(matcher.matches("blah")),
            assertFalse(matcher.matches("Blah")),
            assertEquals[String]("\"blah\"", matcher.describeSelf())
        ));
    })
);
